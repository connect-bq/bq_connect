{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/Frontend/index.html"
    },
    {
      "src": "/login",
      "dest": "/Frontend/public/login.html"
    },
    {
      "src": "/register",
      "dest": "/Frontend/public/register.html"
    },
    {
      "src": "/dashboard",
      "dest": "/Frontend/public/dashboard.html"
    },
    {
      "src": "/about",
      "dest": "/Frontend/public/about.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/Frontend/src/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/Frontend/src/js/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/Frontend/src/assets/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/Frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
